<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@WhiteTheme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="techutracker.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#LoadNew" text="Cargar Nuevo" />
                  <MenuItem mnemonicParsing="false" onAction="#openRecord" text="Abrir" />
                  <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Guardar" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Guardar Como" />
                  <MenuItem mnemonicParsing="false" onAction="#exitApp" text="Exit" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#openManual" text="Manual" />
              <MenuItem mnemonicParsing="false" onAction="#aboutInfo" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
